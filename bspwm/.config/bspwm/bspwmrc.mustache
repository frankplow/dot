#! /bin/bash

WIDTH=$(xrandr | tr , $'\n' | grep current | cut -d' ' -f3)
HEIGHT=$(xrandr | tr , $'\n' | grep current | cut -d' ' -f5)

# launch daemons

sxhkd &
compton -b -i {{inactive-opacity}} --active-opacity {{active-opacity}}

# bspwm settings

bspc monitor -d I II III IV

bspc config normal_border_color		"#{{background}}"
bspc config active_border_color		"#{{bspwm.border_colour}}"
bspc config focused_border_color 	"#{{bspwm.border_colour}}"

bspc config presel_feedback_color	"#{{bspwm.border_colour}}"

bspc config border_width	{{bspwm.border_width}}
bspc config window_gap		{{bspwm.window_gap}}
bspc config top_padding		$(({{bar.height}} + {{bspwm.window_gap}}))

bspc config split_ratio          0.5
bspc config borderless_monocle   true
bspc config gapless_monocle      true

# launch aesthetic programs

lemonbar.sh &
feh --bg-scale {{wallpaper}}
unclutter &
sleep 1
