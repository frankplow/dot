#! /bin/bash



# launch daemons

sxhkd &
compton -b -i {{inactive-opacity}} --active-opacity {{active-opacity}}

# bspwm settings

bspc monitor -d I II III IV

bspc config normal_border_color		"#{{background}}"
bspc config active_border_color		"#{{bspwm.border_colour}}"
bspc config focused_border_color 	"#{{bspwm.border_colour}}"

bspc config presel_feedback_color	"#{{bspwm.border_colour}}"

bspc config border_width	{{bspwm.border_width}}
bspc config window_gap		{{bspwm.window_gap}}
bspc config top_padding		$(({{bar.height}} + {{bspwm.window_gap}}))

bspc config split_ratio          0.5
bspc config borderless_monocle   true
bspc config gapless_monocle      true

# launch aesthetic programs

$HOME/scripts/bar/lemonbar.sh | lemonbar -g $(($WIDTH - {{bspwm.window_gap}} - {{bspwm.window_gap}} - {{bspwm.border_width}} - {{bspwm.border_width}}))x$(({{bar.height}} - {{bspwm.border_width}}))+{{bspwm.window_gap}}+{{bspwm.window_gap}} -f "{{bar.font_text}}:size={{bar.font_size}}" -f "{{bar.font_symbol}}:size={{bar.font_size}}" -F "#{{bar.foreground}}" -B "#{{bar.background}}" -r {{bspwm.border_width}} -R "#{{bar.border}}" -a 16 | bash &
feh --bg-scale {{wallpaper}}
unclutter &
sleep 1
xdo above -t "$(xdo id -N Bspwm -n root | sort | head -n 1)" $(xdo id -a bar)
