#!/usr/bin/env bash

# launch daemons
[ $(pgrep sxhkd | wc -l) -eq 0 ] && sxhkd &
[ $(pgrep compton | wc -l) -eq 0 ] && compton -b -i {{inactive-opacity}} --active-opacity {{active-opacity}}

# set correct monitor
# autorandr -c

# bspwm settings
bspc monitor -d 1 2 3 4

bspc config normal_border_color		"#{{bspwm.inactive_border}}"
bspc config active_border_color		"#{{bspwm.active_border}}"
bspc config focused_border_color 	"#{{bspwm.active_border}}"

bspc config presel_feedback_color	"#{{bspwm.active_border}}"

bspc config border_width	{{bspwm.border_width}}
bspc config window_gap		{{bspwm.window_gap}}
bspc config top_padding		$(({{bar.height}} + {{bspwm.window_gap}}))

bspc config split_ratio          0.5
bspc config borderless_monocle   true
bspc config gapless_monocle      true

bspc rule -a "lemonbar" layer=above
bspc rule -a "Zathura" state=tiled

# launch aesthetic programs
[ $(pgrep lemonbar | wc -l) -eq 0 ] && lemonbar.sh &
feh --bg-scale {{wallpaper}}
[ $(pgrep unclutter | wc -l) -eq 0 ] && unclutter &
